    "version": "0.2.0",
    "configurations": [
        {
            "type": "lua",
            "request": "launch",
            "name": "Debug lua-cmake",
            "program": "${workspaceFolder}/lua/lua-cmake/main.lua",
            "arg": [
                "${workspaceFolder}/test/test.lua",
                "--output", "test/CMakeLists.txt"
            ]
        },
        {
            "type": "lua",
            "request": "launch",
            "name": "Debug lua-cmake without optimize",
            "program": "${workspaceFolder}/lua/lua-cmake/main.lua",
            "arg": [
                "--no-optimize",
                "--output", "test/CMakeLists.txt",
                "${workspaceFolder}/test/test.lua",
            ]
        }
    ]
}
